<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GestionVoiture">



    <EditText
        android:id="@+id/etMatricule"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="528dp"
        android:background="@color/white"
        android:ems="10"
        android:drawableStart="@drawable/ic_matricule"
        android:drawablePadding="12dp"
        android:hint="Matricule"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#331111"
        android:textColorHint="#DC3D3D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@color/white"
        android:drawableStart="@drawable/ic_style"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Style"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#331111"
        android:textColorHint="#DC3D3D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etMatricule"
        app:layout_constraintVertical_bias="0.043" />

    <EditText
        android:id="@+id/etMarque"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@color/white"
        android:drawableStart="@drawable/ic_mark"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Marque"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#331111"
        android:textColorHint="#DC3D3D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etStyle"
        app:layout_constraintVertical_bias="0.052" />


    <EditText
        android:id="@+id/etCarburant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@color/white"
        android:drawableStart="@drawable/ic_carbu"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Carburant"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#331111"
        android:textColorHint="#DC3D3D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etMarque"
        app:layout_constraintVertical_bias="0.067" />

    <EditText
        android:id="@+id/etModel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@color/white"
        android:drawableStart="@drawable/ic_model"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Model"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#331111"
        android:textColorHint="#DC3D3D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etCarburant"
        app:layout_constraintVertical_bias="0.069" />

    <EditText
        android:id="@+id/etColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@color/white"
        android:ems="10"
        android:drawableStart="@drawable/ic_baseline_color_lens_24"
        android:drawablePadding="12dp"
        android:hint="color"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#331111"
        android:textColorHint="#DC3D3D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etModel"
        app:layout_constraintVertical_bias="0.084" />


    <EditText
        android:id="@+id/etPrix"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@color/white"
        android:ems="10"
        android:drawableStart="@drawable/ic_baseline_price_check_24"
        android:drawablePadding="12dp"
        android:hint="Prix"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#331111"
        android:textColorHint="#DC3D3D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etColor"
        app:layout_constraintVertical_bias="0.084" />


    <Button
        android:id="@+id/buttonAddcar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button"
        android:text="add car"
        android:textColor="?attr/colorBackgroundFloating"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPrix" />

    <Button
        android:id="@+id/btnRetreiveDataCar"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="Retreive Data"
        android:textAllCaps="false"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAddcar"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>